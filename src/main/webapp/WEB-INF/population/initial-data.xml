	</bean>

	<bean name="word7" class="acme.entities.spam.Word">
		<property name="word" value = "Has ganado"/>
	</bean>

	<bean name="word8" class="acme.entities.spam.Word">
		<property name="word" value = "You've won"/>
	</bean>

	<bean name="word9" class="acme.entities.spam.Word">
		<property name="word" value = "You have won"/>
	</bean>

	<bean name="word10" class="acme.entities.spam.Word">
